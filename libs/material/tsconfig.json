{
  "extends": "../../tsconfig.base.json",
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    },
    {
      "path": "./tsconfig.lib.prod.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "paths": {
    "client/*": ["libs/client/src/lib/*"],
    "common/*": ["libs/common/src/lib/*"],
    "core/*": ["libs/core/src/lib/*"],
    "directive": ["libs/directive/src/index.ts"],
    "gen": ["libs/gen/src/index.ts"],
    "layout": ["libs/layout/src/index.ts"],
    "material/*": ["libs/material/src/lib/*"],
    "messanger": ["libs/messanger/src/index.ts"],
    "models/*": ["libs/models/src/lib/*"],
    "notification": ["libs/notification/src/index.ts"],
    "rest/*": ["libs/rest/src/lib/*"],
    "util/*": ["libs/util/src/lib/*"]
  },
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
