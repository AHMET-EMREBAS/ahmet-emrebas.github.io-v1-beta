import {
  DataSource,
  ViewColumn,
  ViewEntity,
} from 'typeorm';

@ViewEntity({
  expression: (ds: DataSource) => {
    return ds
      .createQueryBuilder()
      .select(['<%= filename %>.id as id', '<%= filename %>.<%= filename %> as <%= filename %>'])
      .from('<%= filename %>', '<%= filename %>');
  },
})
export class <%= classname %>View {
  @ViewColumn() id: number;
  @ViewColumn() <%= filename %>: string;
}
