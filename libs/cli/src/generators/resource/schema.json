{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "Resource",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Resource Name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "project": {
      "type": "string",
      "description": "Project Name",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": "Which project will you add the resource?"
    }
  },
  "required": ["name", "project"]
}
