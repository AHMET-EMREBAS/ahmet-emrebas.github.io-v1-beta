{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "Resource",
  "title": "Api Resource",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Provide resource name.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name do you like for resource? : "
    },
    "project": {
      "type": "string",
      "description": "Provide project name.",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "alias": "p",
      "x-prompt": "To which project would you like to add the resource?"
    }
  },
  "required": ["name", "project"]
}
