{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "api-auth": ["libs/api-auth/src/index.ts"],
      "api-common": ["libs/api-common/src/index.ts"],
      "api-inventory": ["libs/api-inventory/src/index.ts"],
      "commonjs": ["libs/commonjs/src/index.ts"],
      "web-auth": ["libs/web-auth/src/index.ts"],
      "web-inventory": ["libs/web-inventory/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
