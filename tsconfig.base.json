{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "auth": ["libs/auth/src/index.ts"],
      "cli": ["libs/cli/src/index.ts"],
      "client-resources/*": ["libs/client-resources/src/lib/*"],
      "common/*": ["libs/common/src/lib/*"],
      "core": ["libs/core/src/index.ts"],
      "material/*": ["libs/material/src/lib/*"],
      "models/*": ["libs/models/src/lib/*"],
      "rest/*": ["libs/rest/src/lib/*"],
      "swagger-property": ["libs/swagger-property/src/index.ts"],
      "transformers": ["libs/transformers/src/index.ts"],
      "utilities": ["libs/utilities/src/index.ts"],
      "validations": ["libs/validations/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
