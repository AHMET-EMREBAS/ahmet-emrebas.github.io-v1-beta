{
  "columns": {
    "username": {
      "type": "text",
      "unique": true,
      "minLength": 3
    },
    "password": {
      "type": "text",
      "unique": true,
      "minLength": 3
    },
    "pin": {
      "type": "text",
      "unique": true,
      "minLength": 4,
      "maxLength": 4
    },
    "workhours": {
      "type": "text",
      "transform": "json"
    }
  },
  "relations": {
    "permissions": {
      "type": "many-to-many",
      "target": "permission",
      "nullable": true
    }
  }
}
