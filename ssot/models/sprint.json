{
  "columns": {
    "name": {
      "type": "text",
      "minLength": 1,
      "maxLength": 100
    },
    "description": {
      "type": "text",
      "nullable": true,
      "maxLength": 500
    },
    "status": {
      "type": "text",
      "inputType": "select",
      "enum": ["open", "closed"]
    }
  },
  "relations": {
    "project": {
      "type": "many-to-one",
      "target": "project",
      "nullable": true
    }
  }
}
