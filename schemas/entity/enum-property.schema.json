{
  "$id": "EnumPropertySchema",
  "title": "Enum Property Schema",
  "description": "Property defination of an entity",
  "properties": {
    "name": {
      "type": "string",
      "description": "What is the property name?",
      "minLength": 1,
      "maxLength": 50,
      "default": "name"
    },
    "type": {
      "type": "string",
      "description": "What is the property type?",
      "enum": ["enum"],
      "default": "enum"
    },
    "label": {
      "type": "string",
      "description": "What is the visible property label?",
      "minLength": 1,
      "maxLength": 50,
      "default": "label"
    },
    "icon": {
      "type": "string",
      "description": "What is the property icon name?",
      "minLength": 1,
      "maxLength": 30,
      "default": "icon"
    },

    "group": {
      "type": "string",
      "enum": ["Primary", "Secondary", "Others"],
      "description": "What is the property's input group? It is used for seperating inputs into different forms for better user experience",
      "minLength": 3,
      "maxLength": 50,
      "default": "Primary"
    },
    "update": {
      "type": "boolean",
      "description": "Is update operation allowed for the property?",
      "default": false
    },
    "query": {
      "type": "boolean",
      "description": "Is query operation allowed for the property?",
      "default": false
    },
    "required": {
      "type": "boolean",
      "description": "Is the property required?",
      "default": false
    },
    "unique": {
      "type": "boolean",
      "description": "Is the property unique?",
      "default": true
    },
    "inputElement": {
      "type": "string",
      "description": "Which HTML input element is used for the property?",
      "enum": ["autocomplete", "radio", "select"],
      "default": "select"
    },
    "enum": {
      "type": "array",
      "description": "What are the enum values?",
      "items": {
        "type": "string"
      },
      "default": ["option 1", "option 2", "option 2"]
    },
    "description": {
      "type": "string",
      "description": "What is the role of this property?",
      "minLength": 1,
      "maxLength": 500,
      "default": "description"
    }
  },
  "required": ["name", "type", "inputElement", "enum"],
  "additionalProperties": false
}
