{
  "$id": "RelationPropertySchema",
  "title": "Relation Property Schema",
  "description": "Property defination of an entity",
  "properties": {
    "name": {
      "type": "string",
      "description": "What is the property name?",
      "minLength": 1,
      "maxLength": 50,
      "default": "name"
    },
    "type": {
      "type": "string",
      "description": "What is the property type?",
      "enum": ["many-to-many", "many-to-one", "one-to-many", "one-to-one"],
      "default": "many-to-one"
    },
    "label": {
      "type": "string",
      "description": "What is the visible property label?",
      "minLength": 1,
      "maxLength": 50,
      "default": "label"
    },
    "icon": {
      "type": "string",
      "description": "What is the property icon name?",
      "minLength": 1,
      "maxLength": 30,
      "default": "icon"
    },
    "group": {
      "type": "string",
      "enum": ["Primary", "Secondary", "Others"],
      "description": "What is the property's input group? It is used for seperating inputs into different forms for better user experience",
      "minLength": 3,
      "maxLength": 50,
      "default": "Primary"
    },
    "minLength": {
      "type": "integer",
      "description": "What is the minimum length of the property?",
      "minimum": 0,
      "default": 3
    },
    "maxLength": {
      "type": "integer",
      "description": "What is the maximum length of the property?",
      "minimum": 0,
      "default": 50
    },

    "query": {
      "type": "boolean",
      "description": "Is query operation allowed for the property?",
      "default": false
    },
    "required": {
      "type": "boolean",
      "description": "Is the property required?",
      "default": false
    },
    "uiElement": {
      "type": "string",
      "description": "Which HTML input element is used for the property?",
      "enum": ["radio", "checkbox", "select", "search-item"],
      "default": "select"
    },
    "from": {
      "type": "string",
      "description": "What is the entity name of this relation?",
      "minLength": 3,
      "maxLength": 50
    },
    "parent": {
      "type": "string",
      "description": "What is the parent entity's name?",
      "minLength": 1,
      "maxLength": 50,
      "default": "product"
    }
  },
  "required": ["name", "type", "uiElement", "from"],
  "additionalProperties": false
}
