{
  "$id": "EntitySchema",
  "title": "Entity Schema",
  "description": "Entity Definition",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Entity Name"
    },
    "description": {
      "type": "string",
      "description": "What is the role of this property?",
      "minLength": 1,
      "maxLength": 500,
      "default": "description"
    },
    "mainProperty": {
      "type": "string",
      "description": "What is the main/title property of this entity?",
      "minLength": 1,
      "maxLength": 50
    },
    "properties": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "./text-property.schema.json"
          },
          {
            "$ref": "./relation-property.schema.json"
          },
          {
            "$ref": "./number-property.schema.json"
          },
          {
            "$ref": "./boolean-property.schema.json"
          },
          {
            "$ref": "./enum-property.schema.json"
          },
          {
            "$ref": "./id-property.schema.json"
          },
          {
            "$ref": "./uuid-property.schema.json"
          },
          {
            "$ref": "./date-property.schema.json"
          },
          {
            "$ref": "./generated-text-property.schema.json"
          },
          {
            "$ref": "./email-property.schema.json"
          },
          {
            "$ref": "./password-property.schema.json"
          },
          {
            "$ref": "./currency-property.schema.json"
          }
        ]
      }
    }
  },
  "required": ["properties", "name", "mainProperty"]
}
