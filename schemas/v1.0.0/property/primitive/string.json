{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "StringProperty",
  "title": "String Property",

  "properties": {
    "name": { "$ref": "../../name/property-name.json" },
    "type": {
      "type": "string",
      "const": "string"
    },
    "minLength": {
      "type": "number",
      "default": 0,
      "description": "Minimum allowed length of string property."
    },
    "maxLength": {
      "type": "number",
      "default": 400,
      "description": "Maximum allowed length of string property."
    }
  },
  "required": ["name", "type"]
}
