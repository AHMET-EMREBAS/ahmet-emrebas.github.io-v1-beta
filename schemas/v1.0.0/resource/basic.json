{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Basic Resource",
  "properties": {
    "type": {
      "const": "basic-resource"
    },
    "name": {
      "$ref": "../name/resource-name.json"
    },
    "properties": {
      "$ref": "./properties.json"
    },
    "required": {
      "type": "object",
      "patternProperties": {
        "^[a-z]{1}[a-zA-Z]{1,}$": {
          "type": "boolean",
          "default": true
        }
      }
    }
  },
  "required": ["type"],
  "additionalProperties": false
}
