{
  "$id": "StringValidation",
  "title": "String validation",
  "description": "String validation",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "string"
    },
    "minLength": {
      "type": "number",
      "minimum": 0,
      "default": 0
    },
    "maxLength": {
      "type": "number",
      "default": 0
    },
    "pattern": {
      "type": "string",
      "minLength": 1,
      "default": "^[a-zA-Z\\W]$"
    }
  },
  "required": ["type", "minLength", "maxLength"],
  "additionalProperties": false
}
