{
  "$id": "TextPropertySchema",
  "title": "Text Property Schema",
  "description": "Property defination of an entity",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50,
      "default": "name"
    },
    "type": {
      "type": "string",
      "enum": ["string"],
      "default": "string"
    },
    "minLength": {
      "type": "integer",
      "minimum": 0,
      "default": 3
    },
    "maxLength": {
      "type": "integer",
      "minimum": 0,
      "default": 50
    },
    "update": {
      "type": "boolean",
      "description": "Would you like to update this field?",
      "default": false
    },
    "query": {
      "type": "boolean",
      "description": "Would you like to provide query operation on this field?",
      "default": false
    },
    "required": {
      "type": "boolean",
      "description": "Is the field required?",
      "default": false
    },
    "unique": {
      "type": "boolean",
      "description": "Is the field unique?",
      "default": true
    },
    "input": {
      "type": "string",
      "description": "Which HTML input element would you like to use for this property?",
      "enum": ["text", "textarea", "texteditor"]
    }
  },
  "required": ["name", "type", "input"],
  "additionalProperties": false
}
