{
  "$id": "ResourceSchema",
  "description": "Resource Schemas",
  "title": "Resource Schemas",
  "type": "object",
  "properties": {
    "Name": {
      "type": "string",
      "description": "ResourceName",
      "minLength": 2,
      "maxLength": 30,
      "pattern": "^[a-z]*$",
      "default": "name"
    },
    "Description": {
      "type": "string",
      "description": "Resource description",
      "minLength": 2,
      "default": "Description"
    },
    "Properties": {
      "type": "array",
      "items": {
        "$ref": "./resource-property.schema.json"
      }
    },
    "Required Fields": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2
      }
    },
    "Unique Fields": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2
      }
    }
  },
  "required": ["Name", "Description", "Properties"],
  "additionalProperties": false
}
