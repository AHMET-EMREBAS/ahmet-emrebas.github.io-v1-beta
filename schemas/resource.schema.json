{
  "$id": "ResourceSchema",
  "description": "Resource Schemas",
  "title": "Resource Schemas",
  "type": "object",
  "properties": {
    "Name": {
      "description": "Resource name",
      "$ref": "./names/resource.schema.json"
    },
    "Description": {
      "type": "string",
      "description": "Resource description",
      "minLength": 2,
      "maxLength": 30,
      "default": "Description"
    },
    "Properties": {
      "type": "array",
      "description": "Resource properties",
      "items": {
        "$ref": "./property.schema.json"
      }
    },
    "Required": {
      "type": "array",
      "description": "Required fields",
      "items": {
        "type": "string",
        "minLength": 2
      }
    },
    "Unique": {
      "type": "array",
      "description": "Unique fields",
      "items": {
        "type": "string",
        "minLength": 2
      }
    },
    "Relations": {
      "type": "array",
      "description": "Resource reslationships",
      "items": {
        "oneOf": [
          {
            "$ref": "./relation/many-to-many.schema.json"
          },
          {
            "$ref": "./relation/many-to-one.schema.json"
          },
          {
            "$ref": "./relation/one-to-many.schema.json"
          },
          {
            "$ref": "./relation/one-to-one.schema.json"
          }
        ]
      }
    }
  },
  "required": ["Name", "Description", "Properties"],
  "additionalProperties": false
}
