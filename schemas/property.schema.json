{
  "$id": "PropertySchema",
  "title": "Property Schema",
  "description": "Property defination of an entity",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50,
      "default": "name"
    },
    "type": {
      "type": "string",
      "enum": ["string", "number", "integer", "boolean"],
      "default": "string"
    },
    "minLength": {
      "type": "integer",
      "minimum": 0,
      "default": 3
    },
    "maxLength": {
      "type": "integer",
      "minimum": 0,
      "default": 50
    },
    "min": {
      "type": "number",
      "default": 1
    },
    "max": {
      "type": "number",
      "default": 100
    },
    "update": {
      "type": "boolean",
      "description": "Would you like to update this field?",
      "default": false
    },
    "query": {
      "type": "boolean",
      "description": "Would you like to provide query operation on this field?",
      "default": false
    },
    "required": {
      "type": "boolean",
      "description": "Is the field required?",
      "default": false
    },
    "unique": {
      "type": "boolean",
      "description": "Is the field unique?",
      "default": true
    }
  },
  "required": ["name", "type"]
}
