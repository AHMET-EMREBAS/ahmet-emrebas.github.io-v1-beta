{
  "$id": "BooleanPropertySchema",
  "title": "Boolean Property Schema",
  "description": "Property defination of an entity",
  "properties": {
    "name": {
      "type": "string",
      "description": "What is the property name?",
      "minLength": 3,
      "maxLength": 50,
      "default": "name"
    },
    "type": {
      "type": "string",
      "description": "What is the property type?",
      "enum": ["boolean"],
      "default": "string"
    },
    "label": {
      "type": "string",
      "description": "What is the visible property label?",
      "minLength": 1,
      "maxLength": 50,
      "default": "label"
    },
    "icon": {
      "type": "string",
      "description": "What is the property icon name?",
      "minLength": 1,
      "maxLength": 30,
      "default": "icon"
    },

    "group": {
      "type": "string",
      "description": "What is the property' input group? It is used for seperating inputs into different forms for better user experience",
      "minLength": 3,
      "maxLength": 50,
      "default": "name"
    },
    "update": {
      "type": "boolean",
      "description": "Is update operation allowed for the property?",
      "default": false
    },
    "query": {
      "type": "boolean",
      "description": "Is query operation allowed for the property?",
      "default": false
    },
    "required": {
      "type": "boolean",
      "description": "Is the property required?",
      "default": false
    },
    "unique": {
      "type": "boolean",
      "description": "Is the property unique?",
      "default": true
    },
    "uiElement": {
      "type": "string",
      "description": "Which HTML input element is used for the property?",
      "enum": ["checkbox", "switch"],
      "default": "checkbox"
    }
  },
  "required": ["name", "type", "uiElement"],
  "additionalProperties": false
}
